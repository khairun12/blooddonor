<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/layout1"
    android:background="#fff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/newblood"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="350dp"
        android:id="@+id/ima1"/>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search for"
            android:textColor="#c23537"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Blood"
            android:textColor="#b12529"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/blooddonar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ima1"
        android:layout_marginBottom="124dp"
        android:padding="10dp"
        android:visibility="gone"
        android:text="Find Blood Donor"
        android:background="#d64041"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/bank_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="11dp"
        android:visibility="gone"
        android:layout_alignEnd="@+id/ima1"
        android:layout_alignTop="@+id/blooddonar_btn"
        android:text="Find Blood Bank"
        android:background="#d64041"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/log_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_alignStart="@+id/ima1"
        android:layout_marginBottom="47dp"
        android:layout_alignEnd="@+id/blooddonar_btn"
        android:text="Log In"
        android:background="#d64041"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/reg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ima1"
        android:layout_alignTop="@+id/log_btn"
        android:layout_alignStart="@id/bank_btn"
        android:text="Register"
        android:visibility="gone"
        android:background="#d64041"
        android:textColor="#fff"/>

</RelativeLayout>